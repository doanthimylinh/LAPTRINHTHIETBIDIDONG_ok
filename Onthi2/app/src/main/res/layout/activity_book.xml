<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookActivity">
    <Button
        android:id="@+id/btn_thoat_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:layout_gravity="right"/>
    <EditText
        android:id="@+id/ed_idBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập id"/>
    <EditText
        android:id="@+id/ed_nameBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên"/>
    <EditText
        android:id="@+id/ed_idAuhtor_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập id Author"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_ThemBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btn_XoaBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btn_SuaBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <GridView
        android:id="@+id/gridViewBook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"/>
</LinearLayout>