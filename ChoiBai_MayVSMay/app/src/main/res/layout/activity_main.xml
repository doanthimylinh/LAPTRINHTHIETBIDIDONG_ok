<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="BÀI CỦA MÁY 1"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#CF8383">
    </TextView>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"></ImageView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"></ImageView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"></ImageView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_KetQuaMay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="Kết quả máy 1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/May"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:text="0"
            android:textAlignment="viewEnd" />

        <ImageView
            android:id="@+id/imageSamSet"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/joker"
            />

        <TextView
            android:id="@+id/Nguoi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:paddingTop="20dp"
            android:textAlignment="viewStart"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="BÀI CỦA MÁY 2"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#CF8383"
        android:layout_marginTop="30dp">
    </TextView>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"></ImageView>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"></ImageView>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/b1fv"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_KetQuaNguoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="Kết quả máy 2">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/ed_thoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Thời gian chơi"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:gravity="center">
        </EditText>
        <EditText
            android:id="@+id/ed_buocNhay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bước nhảy"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:gravity="center">
        </EditText>
        <Button
            android:id="@+id/bt_rutbai"
            android:layout_width="100dp"
            android:backgroundTint="#CF8383"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Đấu"/>
    </LinearLayout>


</LinearLayout>